<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:padding="16dp">

    <ImageView
        android:id="@+id/frontPageBackground"
        android:layout_width="500dp"
        android:layout_height="790dp"
        android:clickable="true"
        android:contentDescription="Front page background"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/library" />

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <Button
        android:id="@+id/bookReservationButton"
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="16dp"
        android:textSize="20dp"
        android:text="Book Reservation" />

    <Button
        android:id="@+id/checkEventsButton"
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:layout_below="@id/bookReservationButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:textSize="20dp"
        android:text="Check Events" />

    <Button
        android:id="@+id/manageBookingsButton"
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:layout_below="@id/checkEventsButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="16dp"
        android:text="Manage Bookings"
        android:textSize="20dp" />

    <Button
        android:id="@+id/writeReviewButton"
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:layout_below="@id/manageBookingsButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:text="Write Review"
        android:textSize="20dp" />

</RelativeLayout>